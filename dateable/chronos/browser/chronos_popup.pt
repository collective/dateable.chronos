<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">

<body>

<span metal:define-macro="calendar" class="chronosPopupCalendarContainer">
    <img class="navigationIcon" src="#" tal:attributes="src string:${context/++resource++chronos_support/calendar_icon.gif}" 
        onclick="$('#chronosPopupCalendar').toggleClass('hidden');"/>
    <div  class="chronos-popup-calendar hidden" id="chronosPopupCalendar" tal:content="structure provider:chronos.navigation" />
</span>

</body>

</html>
